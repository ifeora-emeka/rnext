{
  "name": "@idegin/rnext",
  "version": "0.0.4",
  "private": false,
  "description": "A server for running Next.js and Vite applications together",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "types": "./src/types/schema.types.ts",
      "default": "./src/types/schema.types.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run clean && tsup src/index.ts --format cjs,esm --dts --out-dir dist && cd ../../apps/cms && npm run build && cp -r dist ../../packages/rnext/dist/cms-build",
    "dev": "bun run clean && bun --watch src/index.ts",
    "dev:debug": "bun --inspect --watch src/index.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm version patch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "express": "^4.17.1",
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "express": "^4.21.2",
    "next": "^15.1.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "next.js",
    "vite",
    "server",
    "express"
  ],
  "author": "Ifeora Emeka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idegin-tech/rnext.git"
  },
  "bugs": {
    "url": "https://github.com/idegin-tech/rnext/issues"
  },
  "homepage": "https://github.com/idegin-tech/renext#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "zod": "^3.24.1"
  }
}
